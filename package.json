{
	"name": "isbn-kata",
	"version": "1.0.0",
	"description": "ISBN (International Standard Book Number) kata with strict BDD",
	"main": "index.js",
	"scripts": {
		"test": "bash dojo-helper.sh",
		"test:watch": "nodemon --quiet --ext js --watch ./ --exec bash dojo-helper.sh --delay 2",
		"test:coverage": "jest --collectCoverage --verbose",
		"lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
		"lint:fix": "eslint \"**/*.js\" --fix --ignore-pattern node_modules/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cpibm/isbn-kata.git"
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		]
	},
	"author": "xpfarm-coaches-ibm",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"eslint": "^7.32.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jest": "^24.4.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-security": "^1.4.0",
		"jest": "^27.1.0",
		"node-notifier": "^10.0.0",
		"nodemon": "^2.0.12",
		"prettier-eslint": "^13.0.0"
	}
}
